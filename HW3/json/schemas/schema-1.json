{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["@context", "@graph"],
    "properties": {
        "@context": {
            "type": "object"
        },
        "@graph": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": ["@id", "@type", "name", "location"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "pattern": "^ex:dept[0-9]+$"
                            },
                            "@type": {
                                "type": "string",
                                "enum": ["ex:Department"]
                            },
                            "name": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            },
                            "offers": {
                                "type": "string",
                                "pattern": "^ex:course[0-9]+$"
                            },
                            "hasTeacher": {
                                "oneOf": [
                                    {
                                        "type": "string",
                                        "pattern": "^ex:teacher[0-9]+$"
                                    },
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "pattern": "^ex:teacher[0-9]+$"
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": ["@id", "@type", "id", "teacherName", "hasEmail", "hasPhone", "teaches", "belongsTo"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "pattern": "^ex:teacher[0-9]+$"
                            },
                            "@type": {
                                "type": "string",
                                "enum": ["ex:Teacher"]
                            },
                            "id": {
                                "type": "integer"
                            },
                            "teacherName": {
                                "type": "string"
                            },
                            "hasEmail": {
                                "type": "string",
                                "pattern": "^mailto:.+@.+\\..+$"
                            },
                            "hasPhone": {
                                "type": "string",
                                "pattern": "^tel:\\+[0-9]+$"
                            },
                            "teaches": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^ex:course[0-9]+$"
                                }
                            },
                            "belongsTo": {
                                "type": "string",
                                "pattern": "^ex:dept[0-9]+$"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": ["@id", "@type", "code", "title", "credits"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "pattern": "^ex:course[0-9]+$"
                            },
                            "@type": {
                                "type": "string",
                                "enum": ["ex:Course"]
                            },
                            "code": {
                                "type": "string",
                                "pattern": "^CS[0-9]{3}$"
                            },
                            "title": {
                                "type": "string"
                            },
                            "credits": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 10
                            }
                        }
                    }
                ]
            }
        }
    }
}