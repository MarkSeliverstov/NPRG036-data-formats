{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["@context", "@graph"],
    "properties": {
        "@context": {
            "type": "object"
        },
        "@graph": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": ["@id", "@type"],
                         "properties": {
                                "@id": {
                                    "type": "string",
                                    "pattern": "^ex:(program)[0-9]+$"
                                },
                                "@type": {
                                    "type": "string",
                                    "enum": ["ex:Program"]
                                },
                                 "programName": {
                                    "type": "string"
                                },
                                 "duration": {
                                      "type": "integer",
                                       "minimum": 1,
                                        "maximum": 6
                                     }
                             }
                     },
                     {
                         "type": "object",
                         "required": ["@id", "@type"],
                         "properties": {
                                 "@id": {
                                    "type": "string",
                                    "pattern": "^ex:(student)[0-9]+$"
                                },
                                "@type": {
                                    "type": "string",
                                    "enum": ["ex:Student"]
                                },
                                 "id": {
                                    "type": "integer"
                                 },
                                  "name": {
                                     "type": "string"
                                  },
                                 "hasEmail": {
                                    "type": "string",
                                     "pattern": "^mailto:.+@.+\\..+$"
                                 },
                                 "hasPhone": {
                                    "type": "string",
                                    "pattern": "^tel:\\+[0-9]+$"
                                 },
                                "enrolledIn": {
                                     "type": "string",
                                     "pattern": "^ex:program[0-9]+$"
                                },
                                 "hasEnrolled": {
                                   "type": "string",
                                    "pattern": "^ex:enrollment[0-9]+$"
                                 }
                          }
                     },
                     {
                         "type": "object",
                          "required": ["@id", "@type"],
                          "properties": {
                               "@id": {
                                   "type": "string",
                                   "pattern": "^ex:(enrollment)[0-9]+$"
                                },
                                "@type": {
                                  "type": "string",
                                  "enum": ["ex:Enrollment"]
                                },
                                 "grade": {
                                   "type": "integer",
                                   "minimum": 1,
                                   "maximum": 5
                                },
                               "enrolledOn": {
                                 "type": "string",
                                  "format": "date"
                                  },
                              "completedOn": {
                                     "type": "string",
                                    "format": "date"
                                 },
                              "course": {
                                 "type": "string",
                                   "pattern": "^ex:course[0-9]+$"
                                }
                             }
                     }
                  ]
               }
          }
     }
    }