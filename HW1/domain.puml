@startuml

class Person {
  id: Int
  name: String
  email: String
  phones: String [0..*]
}

class Student { }

class Teacher { }

class Course {
  code: String
  title: String
  credits: Int
}

class Enrollment {
  grade: Int
  enrolledOn: Date
  completedOn: Date [0..1]
}

class Department {
  name: String
  location: String
}

class Program {
  name: String
  duration: Int
}

Person <|-- Student
Person <|-- Teacher

Student "1..1" -- "0..*" Enrollment : enrolls
Enrollment "0..*" -- "1..1" Course : course

Teacher "0..*" -- "0..*" Course : teaches
Teacher "0..*" -- "1..1" Department : belongs to

Course "0..*" -- "1..1" Department : offers
Student "0..*" -- "0..1" Program : enrolled in

@enduml
